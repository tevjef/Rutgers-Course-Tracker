<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_header_chooser"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:elevation="1dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginStart="34dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Let's get started"
                android:id="@+id/header_text"
                android:textSize="40sp"
                android:backgroundTint="@color/accent"
                android:typeface="normal"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/primary_light"
                android:layout_above="@+id/subtitle"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a term, location and level of study"
                android:id="@+id/subtitle"
                android:textSize="16sp"
                android:backgroundTint="@color/accent"
                android:typeface="normal"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="16dp" />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_below="@+id/toolbar_header_chooser"

        android:layout_marginTop="12dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Term"
            android:id="@+id/semester_title"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:gravity="center_vertical" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/semester_radiogroup"
            android:layout_below="@+id/semester_title"
            android:layout_alignParentStart="true">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstSemester"
                android:id="@+id/semester1"
                android:checked="false"

                android:textColor="@color/primary_text" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secondSemester"
                android:id="@+id/semester2"
                android:checked="false"
                android:textColor="@color/primary_text" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thirdSemester"
                android:id="@+id/semester3"
                android:layout_below="@+id/semester1"
                android:layout_alignParentStart="true"
                android:checked="false"
                android:textColor="@color/primary_text" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location"
            android:id="@+id/location_title"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/level1"
            android:layout_marginLeft="16dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstLocation"
            android:id="@+id/location1"
            android:textColor="@color/primary_text"
            android:checked="false"
            android:layout_below="@+id/location_title"
            android:layout_alignParentStart="false"
            android:layout_alignStart="@id/location_title" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secondLocation"
            android:id="@+id/location2"
            android:textColor="@color/primary_text"
            android:checked="false"
            android:layout_below="@+id/location1"
            android:layout_alignStart="@+id/location1" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thirdLocation"
            android:id="@+id/location3"
            android:textColor="@color/primary_text"
            android:checked="false"
            android:layout_below="@+id/location2"
            android:layout_alignStart="@+id/location2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Level"
            android:id="@+id/level_title"
            android:layout_below="@+id/location3"
            android:layout_alignParentStart="true"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstLevel"
            android:id="@+id/level1"
            android:layout_below="@+id/level_title"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textColor="@color/primary_text" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secondLevel"
            android:id="@+id/level2"
            android:layout_below="@+id/level1"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textColor="@color/primary_text" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/accent">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="NEXT"
            android:id="@+id/search_button"
            android:onClick="onSearch"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:elevation="0dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal" />
    </RelativeLayout>

</RelativeLayout>