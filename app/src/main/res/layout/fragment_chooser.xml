<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Semester"
        android:id="@+id/semester_title"
        android:textColor="@color/secondary_text" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/semester_radiogroup"
        android:layout_below="@+id/semester_title"
        android:layout_alignParentStart="true">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firstSemester"
            android:id="@+id/semester1"
            android:checked="false"
            android:textColor="@color/primary_text" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/secondSemester"
            android:id="@+id/semester2"
            android:checked="false"
            android:textColor="@color/primary_text" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thirdSemester"
            android:id="@+id/semester3"
            android:layout_below="@+id/semester1"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:textColor="@color/primary_text" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Location"
        android:id="@+id/location_title"
        android:layout_below="@+id/semester_radiogroup"
        android:layout_alignParentStart="true"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstLocation"
        android:id="@+id/location1"
        android:layout_below="@+id/location_title"
        android:layout_alignParentStart="true"
        android:textColor="@color/primary_text"
        android:checked="false" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secondLocation"
        android:id="@+id/location2"
        android:layout_below="@+id/location1"
        android:layout_alignParentStart="true"
        android:textColor="@color/primary_text"
        android:checked="false" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thirdLocation"
        android:id="@+id/location3"
        android:layout_below="@+id/location2"
        android:layout_alignParentStart="true"
        android:textColor="@color/primary_text"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Level"
        android:id="@+id/level_title"
        android:layout_below="@+id/location3"
        android:layout_alignParentStart="true"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstLevel"
        android:id="@+id/level1"
        android:layout_below="@+id/level_title"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@color/primary_text" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secondLevel"
        android:id="@+id/level2"
        android:layout_below="@+id/level1"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@color/primary_text" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search_button"
        android:onClick="onSearch"
        android:layout_below="@+id/level2"
        android:layout_alignParentStart="true" />

</RelativeLayout>