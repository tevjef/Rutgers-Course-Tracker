<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_find_courses"
        android:layout_alignParentEnd="false"
        android:alpha="0.1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/content_description_webreg_image" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="1dp"
        android:transitionName="toolbar_background">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rutgers Schedule of Classes"
                android:id="@+id/header_text"
                android:textSize="36sp"
                android:typeface="normal"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:layout_above="@+id/subtitle"
                android:layout_alignParentLeft="true"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a term, location and level of study"
                android:id="@+id/subtitle"
                android:textSize="16sp"
                android:typeface="normal"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/black"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                tools:ignore="HardcodedText" />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"

        android:transitionGroup="true"
        android:paddingLeft="25dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Term"
                android:id="@+id/semester_title"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/semester_radiogroup">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/firstSemester"
                    android:id="@+id/semester1"
                    android:checked="false"

                    android:textColor="@color/primary_text" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secondSemester"
                    android:id="@+id/semester2"
                    android:checked="false"
                    android:textColor="@color/primary_text" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thirdSemester"
                    android:id="@+id/semester3"
                    android:checked="false"
                    android:textColor="@color/primary_text" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout3"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignLeft="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Level"
                android:id="@+id/level_title"
                android:textColor="@color/secondary_text"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstLevel"
                android:id="@+id/level1"
                android:checked="false"
                android:textColor="@color/primary_text" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secondLevel"
                android:id="@+id/level2"
                android:checked="false"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_marginLeft="21dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Location"
                android:id="@+id/location_title"
                android:textColor="@color/secondary_text"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstLocation"
                android:id="@+id/location1"
                android:textColor="@color/primary_text"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secondLocation"
                android:id="@+id/location2"
                android:textColor="@color/primary_text"
                android:checked="false" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thirdLocation"
                android:id="@+id/location3"
                android:textColor="@color/primary_text"
                android:checked="false" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/accent">

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="NEXT"
            android:id="@+id/search_button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textStyle="italic"
            android:background="@drawable/btn_toggle_selector"
            android:elevation="0dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            tools:ignore="HardcodedText"
            android:transitionName="snackbar" />
    </RelativeLayout>

</RelativeLayout>