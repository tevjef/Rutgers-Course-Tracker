<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section_times_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

  <LinearLayout
      android:id="@+id/section_times_wrapper"
      android:orientation="vertical"
      style="@style/section_metadata_containers"
      >

    <TextView
        android:id="@+id/sectionNumber"
        android:text="@string/time_and_location"
        style="@style/PrimaryTextStyle"
        />

    <LinearLayout
        android:id="@+id/section_times_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/SecondaryMetadataTextStyle"
        >
    </LinearLayout>

  </LinearLayout>

  <View
      android:layout_below="@+id/section_times_wrapper"
      style="@style/divider.metadata"
      />

</RelativeLayout>
