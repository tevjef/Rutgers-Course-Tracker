<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <Toolbar
            android:id="@+id/toolbar_header_info"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:minHeight="?android:attr/actionBarSize"
            android:background="@color/primary"
            android:elevation="1dp"
            android:paddingRight="16dp">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="56dp"
                android:id="@+id/course_header_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="COMPUTERS &amp; PROGRAMMING TEST OF A LONGER COURSE TITLE"
                    android:id="@+id/sectionText_text"
                    android:textSize="24sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/white"
                    android:layout_above="@+id/credits_text"
                    android:layout_alignParentStart="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:maxLines="3"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/credits_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="5sp"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21:198:101"
                    android:id="@+id/sectionText_title"
                    android:textSize="12sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_above="@+id/sectionText_text"
                    android:layout_alignParentStart="true"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="credits"
                    android:id="@+id/credits_title"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_below="@+id/sectionText_text"
                    android:layout_toEndOf="@+id/credits_text"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/openSections_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginRight="5sp"
                    android:layout_alignBottom="@+id/credits_title"
                    android:layout_toEndOf="@+id/credits_title"
                    android:layout_marginLeft="16dp"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="open sections of"
                    android:id="@+id/openSections_title"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/black"
                    android:layout_below="@+id/sectionText_text"
                    android:layout_toEndOf="@+id/sectionText_title"
                    android:layout_toRightOf="@+id/openSections_text"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/totalSections_text"
                    android:textSize="14sp"
                    android:backgroundTint="@color/primary"
                    android:typeface="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:layout_marginRight="5sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBottom="@+id/openSections_title"
                    android:layout_toEndOf="@+id/openSections_title"
                    android:alpha="0.5" />


            </RelativeLayout>
        </Toolbar>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar_header_info"
            android:id="@+id/section_metadata_container"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:id="@+id/course_metadata">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/courseNotes_container"
                    android:layout_alignParentStart="true">


                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="Course Notes:"
                        android:id="@+id/sectionNotes_title"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COURSE MEETS: CKB-220"
                        android:id="@+id/courseNotes_text"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:nestedScrollingEnabled="false"
                        android:elegantTextHeight="true"
                        android:focusableInTouchMode="false"
                        android:layout_toEndOf="@+id/sectionNotes_title"
                        android:fillViewport="true"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subjectNotes_container"
                    android:layout_below="@+id/courseNotes_container"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="Subject Notes:"
                        android:id="@+id/sectionComments_title"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COURSE MEETS: CKB-220"
                        android:id="@+id/subjectNotes_text"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:nestedScrollingEnabled="false"
                        android:elegantTextHeight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/sectionComments_title"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prereq_container"
                    android:layout_below="@+id/subjectNotes_container"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:text="Prereqs:"
                        android:id="@+id/prereq_title"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/primary_text"
                        android:textSize="12sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="640:327, 640:211, 220:231, 830:301"
                        android:id="@+id/prereq_text"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp"
                        android:nestedScrollingEnabled="false"
                        android:elegantTextHeight="true"
                        android:editable="false"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/prereq_title"
                        android:maxLines="5"
                        android:scrollbars="vertical"/>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                android:text="Sections"
                android:id="@+id/section_title"
                android:gravity="center_vertical"
                android:textColor="@color/primary_text"
                android:textSize="12sp"
                android:layout_alignStart="@+id/course_metadata"
                android:layout_below="@+id/course_metadata"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sections_container"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/section_metadata_container" />

    </RelativeLayout>
</ScrollView>