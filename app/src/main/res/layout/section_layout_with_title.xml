<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingRight="@dimen/default_margin"
    android:paddingTop="16dp"
    tools:background="@android:color/white"
    >

  <include
      layout="@layout/section_item_circle"
      android:id="@+id/section_number_background"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingLeft="16dp"
      >

    <TextView
        android:id="@+id/course_title_text"
        android:paddingBottom="4dp"
        android:text="Computer Science | Computer &amp; Programming I"
        tools:ignore="HardcodedText"
        style="@style/PrimaryTextStyle"
        />

    <View
        android:id="@+id/fsl_divider"
        android:layout_marginBottom="4dp"
        style="@style/divider"
        />

    <include
        layout="@layout/section_item_time_container"
        android:id="@+id/section_item_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/prof_text"
        android:layout_gravity="end"
        android:layout_marginTop="2dp"
        android:text="A EXAMPLE OF VERY LONG TEXT"
        android:textColor="@color/secondary_text"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        style="@style/SecondaryTextStyle"
        />
  </LinearLayout>

</LinearLayout>
